// Main settings

nav_width = 30%
content_width = 60%

main_bg_color = white
main_text_color = black
primary_font = 'Quicksand', 'Futura', Helvetica, sans-serif

main_red = #800000
main_orange = #f87217
main_green = #008000
main_gray = #808080

// Fonts

@font-face
    font-family Quicksand
    src url("./fonts/quicksand/Quicksand-Light.otf") format("opentype")

// Animations

@keyframes text-pulse
    0%
        letter-spacing: 3px
    25%
        letter-spacing: 6px
    50%
        letter-spacing: 12px
    100%
        letter-spacing: 24px

@keyframes slide-in
    0%
        opacity 0
        margin-left 100px
    100%
        opacity 1
        margin-left 5px
        top auto
        transform none

animation()
    -webkit-animation: arguments
    -moz-animation: arguments
    -ms-animation: arguments
    -o-animation: arguments
    animation: arguments

animation-fill-mode()
    -webkit-animation-fill-mode: arguments
    -moz-animation-fill-mode: arguments
    -ms-animation-fill-mode: arguments
    -o-animation-fill-mode: arguments
    animation-fill-mode: arguments

body
    background: main_bg_color
    color: main_text_color
    font-family: primary_font

.fader
    animation text-pulse 4s 1s infinite linear alternate
    
.sliding-text
    .block-letter
        width 80px
        height 50px
        border-radius 5px
        border 2px solid white
        color white
        text-align center
        margin 5px
        opacity 0
        animation slide-in 2s 1s 1 ease-out alternate
        animation-fill-mode forwards
        position relative
        top 50%
        transform translateY(-50%)

// General Styles

.container
    width 100%
    padding 0 50px
    box-sizing border-box
    
    a
        color white
        text-decoration none

.outlined
    border-width 4px
    border-style solid
    border-color white
    background-color white

.outlined.red
    border-color main_red
    color main_red

.outlined.orange
    border-color main_orange
    color main_orange

.outlined.green
    border-color main_green
    color main_green

.content-header
    width nav_width

.content
    text-align center

.section-index,
.section
    position relative
    display inline-block
    text-align left


.section-index
    width nav_width
    z-index 12
    padding 0 16px
    border-style solid
    border-width 0 4px 0 0
    border-color white
    
    .item
        width 100%
        display inline-block
        padding 20px
        margin 10px 0
        box-sizing border-box
        box-shadow 10px 5px 5px main_gray
        -webkit-transition box-shadow, margin, border-right, 0.5s
        transition box-shadow, margin, border-right, 0.5s
    
    .item:hover, .item.active
        box-shadow none
    
    .item:hover
        margin-left 10px
    
    .item.active
        margin-left 20px
        border-right white

    -webkit-transition border-color 0.5s
    transition border-color 0.5s
    -webkit-transition-delay: 0.5s;
    transition-delay: 0.5s;

.section
    width content_width
    z-index 0
    vertical-align top
    margin-left 16px
    
    .item
        height 100%